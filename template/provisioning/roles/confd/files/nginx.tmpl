upstream skilltree-stage {
  {{range $server := .skilltree_{{env}}_upstream}}
  server {{$server.Value}};
  {{end}}
}

server {
  server_name {{server_names}};
  listen 80;

  location / {
    proxy_pass http://skilltree-stage;
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}